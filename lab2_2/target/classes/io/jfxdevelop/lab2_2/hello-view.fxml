<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.jfxdevelop.lab2_2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Операции с матрицами" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Матрица A -->
    <Label text="Матрица A:"/>
    <TextArea fx:id="matrixAInput" promptText="Введите элементы матрицы A (по строкам, элементы разделены пробелами)" prefRowCount="5" prefColumnCount="30"/>

    <!-- Матрица B -->
    <Label text="Матрица B:"/>
    <TextArea fx:id="matrixBInput" promptText="Введите элементы матрицы B (по строкам, элементы разделены пробелами)" prefRowCount="5" prefColumnCount="30"/>

    <!-- Кнопки -->
    <Button text="Сложить матрицы" onAction="#onAddClick"/>
    <Button text="Умножить матрицы" onAction="#onMultiplyClick"/>

    <!-- Результат -->
    <Label text="Результат:"/>
    <TextArea fx:id="resultArea" editable="false" prefRowCount="8" prefColumnCount="40"/>

</VBox>